{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "ANTHROPIC_API_KEY": "@anthropic_api_key",
    "CLAUDE_MODEL": "claude-sonnet-4-20250514",
    "TRANSLATION_MAX_TOKENS": "4000",
    "TRANSLATION_TEMPERATURE": "0.3"
  }
}
